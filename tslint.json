{
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended"
    ],
    "rules": {
      "quotemark": [
        true,
        "single"
      ],
      "semicolon": [
        true,
        "always"
      ],
      "trailing-comma": [
        false
      ],
      "no-console": [
        true,
        "log"
      ],
      "whitespace": [
        true,
        "check-module"
      ],
      "ordered-imports": false,
      "no-var-requires": false,
      "no-string-literal": false
    },    
    "rulesDirectory": []
  }